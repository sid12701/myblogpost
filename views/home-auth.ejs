      <main>
        <div class="row">
          <% for(let i = 0; i < posts.length; i++) { %>
            <div class="col-md-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= posts[i].title %></h5>
                  <p class="card-text"><%= posts[i].content %></p>
                  <a href="/posts/<%= posts[i]._id %>" class="btn btn-primary">Read more</a>
                  <a href="/posts/<%=posts[i]._id%>/delete" class="btn btn-primary">Delete</a>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </main>

